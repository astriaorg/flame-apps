{
  "name": "web-apps",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "format": "prettier --write \"**/*.{ts,tsx,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,css}\"",
    "lint": "turbo lint",
    "dev": "turbo dev",
    "test": "turbo test"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "eslint-plugin-react-hooks": "^5.1.0"
  }
}
